@model IEnumerable<F1World.Team>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoundedYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Principal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoundedYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Principal)
            </td>
            <td>
                    @if (User.IsInRole("Admin"))
                    {
                    <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item}) |
                            @Html.ActionLink("Details", "Details", new { id = item}) |
                            @Html.ActionLink("Delete", "Delete", new { id = item})
                    </td>
                    }
                    else
                    {
                    <td>
                            @Html.ActionLink("Details", "Details", new { id = item})
                    </td>
                    }
        </tr>
}
    </tbody>
</table>
