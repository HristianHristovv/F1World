@model IEnumerable<F1World.Team>

@{
    ViewData["Title"] = "Teams";
}

<h1 class="text-danger text-center">🏁 F1 Teams</h1>

<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-success" asp-action="Create">➕ Create New</a>
    }
</p>

<table class="table table-dark table-striped table-hover shadow">
    <thead>
        <tr>
            <th>Team Name</th>
            <th>BaseLocation</th>
            <th>Founded</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>
                    <a class="btn btn-outline-light btn-sm"
                       target="_blank"
                       href="https://en.wikipedia.org/wiki/@(team.Name.Replace(" ", "_"))">
                        @team.Name
                    </a>
                </td>
                <td>@team.BaseLocation</td>
                <td>@team.FoundedYear</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = team }, new { @class = "btn btn-sm btn-warning me-1" })
                        @Html.ActionLink("Delete", "Delete", new { id = team }, new { @class = "btn btn-sm btn-danger" })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
