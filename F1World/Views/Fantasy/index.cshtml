@{
    ViewData["Title"] = "Fantasy Team";
    var drivers = ViewBag.Drivers as List<string>;
    var teams = ViewBag.Teams as List<string>;
}

<div class="container mt-5 animate-fade-in">
    <h2 class="text-center text-danger mb-4">🚀 Create Your Fantasy F1 Team</h2>

    <form method="post" class="bg-dark p-4 rounded-4 shadow-lg fantasy-form">
        <div class="row mb-3">
            <div class="col-md-6">
                <label class="form-label text-white">Select Driver 1</label>
                <select class="form-select custom-select" name="driver1" required>
                    <option disabled selected>Choose...</option>
                    @foreach (var driver in drivers)
                    {
                        <option value="@driver">@driver</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label text-white">Select Driver 2</label>
                <select class="form-select custom-select" name="driver2" required>
                    <option disabled selected>Choose...</option>
                    @foreach (var driver in drivers)
                    {
                        <option value="@driver">@driver</option>
                    }
                </select>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <label class="form-label text-white">Select Team 1</label>
                <select class="form-select custom-select" name="team1" required>
                    <option disabled selected>Choose...</option>
                    @foreach (var team in teams)
                    {
                        <option value="@team">@team</option>
                    }
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label text-white">Select Team 2</label>
                <select class="form-select custom-select" name="team2" required>
                    <option disabled selected>Choose...</option>
                    @foreach (var team in teams)
                    {
                        <option value="@team">@team</option>
                    }
                </select>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-lg">💾 Save Fantasy Team</button>
        </div>
    </form>
</div>
