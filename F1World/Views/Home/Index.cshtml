@{
    ViewData["Title"] = "F1 World";
    var drivers = ViewData["Drivers"] as List<F1World.Models.DriverStandingsModel>;
    var news = ViewData["News"] as string;
}

<div class="container">
    <div class="row">
        <!-- Standings таблица -->
        <div class="col-md-6">
            <h2>F1 2025 DRIVERS STANDINGS</h2>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Driver</th>
                        <th>Team</th>
                        <th>Points</th>
                    </tr>
                </thead>
                <tbody>
                    @if (drivers != null && drivers.Any())
                    {
                        @foreach (var driver in drivers)
                        {
                            <tr>
                                <td>@driver.Position</td>
                                <td>@driver.Driver.FirstName @driver.Driver.LastName</td>
                                <td>@driver.Constructors[0].TeamName</td>
                                <td>@driver.Points</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="4">Няма данни</td></tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- F1 новини -->
        <div class="col-md-6">
            <h2>News</h2>
            <div class="card bg-dark text-white p-3">
                @Html.Raw(news) <!-- Сега новините ще бъдат с кликаеми линкове -->
            </div>
        </div>
    </div>
</div>
